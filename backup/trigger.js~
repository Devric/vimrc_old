    /*--------- !static_content ---------*/

    /*number of elements in the array*/
    var elements_length = elements.length;

    /*//loop through the number of elements*/
    var i;
    for(i=0; i<elements_length; i++){

        /*//delegte events to every element*/
        $(elements[i]).live("click", function(e){

            /*//prevent default actions*/
            e.preventDefault();

            /*//work with the scope of the selected element - ie8 needs this*/
            var item = this.outerHTML;

            /*//check if the link is id driven*/
            if($(item).attr('id')){

                /*//extract the id name*/
                var element_id = ($(this).attr('id'));
                /*//extract the html from the static content array*/
                var html = static_content[element_id];

            }
            /*//else it will be class driven*/
            else{

                /*//check the class if IE added the default class*/
                if ($(item).is('.slver-hover')) {

                    /*//remove the class*/
                    var item = $(item).removeAttr('class');

                    /*//extract the class name only*/
                    var element_class = ($(this).attr('class'));
                    /*//extract the html from the static content array*/
                    var html = static_content[element_class];

                }
                /*//render content as usual*/
                else {

                    /*//extract the class name only*/
                    var element_class = ($(this).attr('class'));
                    /*//extract the html from the static content array*/
                    var html = static_content[element_class];
                }

            }

            /*//render content*/
            catalog.openStatic(html);

        });

    }

    /* home page carousel */
    $('#carousel-orbit').orbit({
        "animation" : 'horizontal-push',
        "advanceSpeed" : 6000,
        "timer" : true,
        "animationSpeed" : 1000,
        "bullets" : false
    });

    /* new men/ women landing page carousel */
    $('.slider').royalSlider({
        transitionType: 'fade',
        constrolNavigation: 'tabs',
        loop: true,
        autoPlay: {
            enabled: true,
            pauseOnHover: true,
            delay: 3500
        }
    });

    /*shopping bag behaviour---------------------------------*/

    /*//bag variables*/
    var timer;
    var bagstatus = 0;
    var hidetimer;

    $("#my-bag").live('mouseenter', function(){

        $("#my-bag-items").addClass('open');
        /*//open the bag immediately*/
        var bagQty = $('.desktop-bag-preview #bag-qty a').html();
        if (bagQty == 0){
            $('#my-bag-items').hide();
        }else{
            bagActionShow();
        }
        clearTimeout(timer);

    }).bind('mouseleave', function(){
        $("#my-bag-items").removeClass('open');
        /*//if the users mouse leaves the bag icon - they do not hover over the bag content - hide it*/
        timer = setTimeout(function(){

            bagActionHide();

        }, 1000);

    });

    $("#header-cart-bag").on('click', function(){

        window.location = "/cart/";

    });

    $('#my-bag-items').bind('mouseenter', function(){

        clearTimeout(timer);

    }).bind('mouseleave', function(){

        bagActionHide();

    });

    var bagActionShow = function(){


        $("#my-bag-items").fadeIn(function(){
            $('#my-bag-items').stop();
        });
        $("#my-bag-items").css("z-index", "1001");


        bagstatus = 1;
    }

    var bagActionHide = function(){

        $("#my-bag-items").fadeOut(function(){
            $('#my-bag-items').slideUp();
        });

        hidetimer = setTimeout(function(){
            bagstatus = 0;
        }, 1000);

    }

   /* //size guide events*/

    $('#size-guide-men, #size-guide-women').live("click", function(e){
        e.preventDefault();
        var default_tab = $(this).attr("href");
        openDefaultQuickTab(default_tab);
        $('#quickview-window').css({'width' : '960px', 'left' : '41.5%'})
    });
    $('.tabs a').live('click', function(){
        switch_tabs($(this));
        return false
    });
    function switch_tabs(obj)
    {
        $('.tab-content').hide();
        $('.size-images img').hide();
        $('.tabs a').removeClass("selected");
        $('.tabs li').removeClass("selected");
        var id = obj.attr("rel");

        var img_id = id.split('_');

        $('.size-images #sizeImg'+img_id[1]).show();
        $('#'+id).show();
        obj.addClass("selected");
        obj.parent().addClass("selected");
    }
    function openDefaultQuickTab(tab){
        $('.tab-content').hide();
        $('.size-images img').hide();

        var img_id = tab.split('_');
        var tab_id = tab.split('#');

        $('.size-images #sizeImg'+img_id[1]).show();
        $(tab).show();
        if ( tab == "#tab_1"){
            $('a[rel="tab_1"]').addClass("selected");
            $('a[rel="tab_1"]').parent('li').addClass("selected");
        }else{
            $('a[rel="tab_2"]').addClass("selected");
            $('a[rel="tab_2"]').parent('li').addClass("selected");
        }
    }

    /*catalog highlight*/
    $('#shoe-color-selection .squareselect').parent('li').css('border', '2px solid #FA9C2B');
    /*ie7 - ensure inactive parents are hidden*/
    $('#facet_trend .inactive').parent('li').css('display', 'none');
    /* responsive functionality */
    /* check for $responsive_class Product Page */
    if($('body').hasClass('responsiveCatalogDetail')){
        $('#btn-breadcrumb-nav').click(function(){
            $('.breadcrumb ul').slideToggle('medium');
        });
    } else {}

    /* responsive resize from mobile + , prevents the breadcrumb from staying hidden when resizing up */
    $(window).resize(function(){
        $('.breadcrumb ul').css('display', 'block')
    });

    /* if the current page is the responsive product page - hide the breadcrumb*/
    if($('body').hasClass('responsiveCatalogDetail')){
        $('.breadcrumb ul').addClass('respnsv-breadcrumb');
    }

    $('#tablet-dropdown-nav').change(function () {
        location.href = $('#tablet-dropdown-nav option:selected').val();
    });


    /*
     * Create a account after success page
     *
     * */
    $('#create_account_btn').click(function () {
        var guestPassword = $('#checkout_create_password').val();
        var generatePassword = $('#generatePassword').val();
        $.ajax({
            url : '/checkout/index/createaccount',
            async: false,
            data : {"guestPassword" : guestPassword , "generatePassword" : generatePassword},
            success : function(data){
                /*
                 * parse the data - bool
                 * */
                var jsonParsed = $.parseJSON(data);

                var partial = jsonParsed["content"];
                $('.thankyoubox').html(partial);
                $('#create_account_btn').hide();

            }
        }, "json");
    });

    $('#paymentButton').on('click', function(){
        if ($('input:radio[name="PaymentMethod[payment_method]"]:checked').val() == "cc"){
            $('.card-name').html($('#CreditcardForm_cc_holder').val())
            /* credit card number */
            var cc_number = $('#CreditcardForm_cc_number').val();
            /* extract the last 4 digits */
            cc_number = cc_number.substr(12);
            $('.card-number').html(cc_number);
            var expityMonth = $('#CreditcardForm_cc_exp_month option:selected').text().split(' - ');
            $('.card-valid').html(expityMonth[0]);
            $('.card-valid2').html($('#CreditcardForm_cc_exp_year option:selected').text());
            $('.hide-paypal').css('display', 'block');
        } else {
            $('.card-name').html('You will be redirected to Paypal').css('width', '270px');
            $('.hide-paypal').css('display', 'none');
        }
    });

    /* update local storage timestamp */
    if (Modernizr.localstorage) {
        var hours = 24; // Reset when storage is more than 24hours
        var now = new Date().getTime();
        var setupTime = localStorage.getItem('setupTime');
        if (setupTime == null) {
            localStorage.setItem('setupTime', now)
        } else {
            if (now-setupTime > hours*60*60*1000) {
                localStorage.clear();
                localStorage.setItem('setupTime', now);
            }
        }
    }

    $('.gift-wrap').click(function () {
        var check = $(this).is(':checked');
        if(check){
            $(this).siblings(".gift-label").addClass("hidden");
        }else{
            $(this).siblings(".gift-label").removeClass("hidden");
        }
    });

    var check = $('.gift-wrap').is(':checked');
    if(check){
        $('.gift-wrap').siblings(".gift-label").addClass("hidden");
    }


    /**
     *
     *
     *
     * Replace timestamp to current seconds within a .doubleclick-container
     */
    if ( $('.doubleclick-container').length ) {
        (function(){
            /* current time */
            var seconds = Math.floor(new Date().getTime() / 1000);

            $('.doubleclick-container').find('img,a,iframe').each(function(){
                /* get src || href */
                var str = $(this).attr('href') ? $(this).attr('href') : $(this).attr('src');

                /* replace [timestamp] of src || href */
                str = str.replace(/\[timestamp]/g, seconds);

                /* replace src || href */
                $(this).attr('href') ? $(this).attr('href', str) : $(this).attr('src', str);
            });

           console.log($('.doubleclick-container'));
        }());
    } /* end if .doubleclick-container */
});